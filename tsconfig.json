{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@business/*": ["src/business/*"],
        "@data/*": ["src/data/*"],
        "@middleware/*": ["src/middleware/*"],
        "@routes/*": ["src/routes/*"],
        "@schema/*": ["src/schema/*"],
        "@services/*": ["src/services/*"],
        "@util/*": ["src/util/*"],
        "*": ["node_modules/*"]
      },
      "outDir": "dist",
      "lib": ["ESNext"],
      "module": "CommonJS",
      "target": "ESNext",
      "moduleResolution": "Node",
      "removeComments": true,
      "esModuleInterop": true
    },
    "include": [
      "index.ts",
      "update-monthly.scheduled.ts"
    ]
}